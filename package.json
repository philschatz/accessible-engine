{
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --fix --ext .ts,.tsx",
    "test": "npm run-script build && npm run-script start",
    "test:debug": "npm run-script build && npm run-script start:debug",
    "start": "node -r source-map-support/register ./src/index.js",
    "start:debug": "node --inspect-brk -r source-map-support/register ./src/index.js"
  },
  "devDependencies": {
    "@types/ansi-escapes": "^4.0.0",
